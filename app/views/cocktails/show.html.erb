<div class="container">
  <div class="card">
   <h1><%= @cocktail.name %></h1>
  </div>
  <div class="card">
    <%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail) %>
    <ul>      
      <% @cocktail.doses.each do |dose| %>
        <li><%= dose.description %> <%= @ingredients.find(dose.ingredient_id).name %></li>
      <% end %>      
    </ul> 
    <h4>Method</h4>
    <p>You can work it out on your own.</p>     
  </div>
  <div class="card">
    <%= link_to "Back to cocktails", cocktails_path %>
  </div>
</div>
