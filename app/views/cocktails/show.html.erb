<div class="container">
  <div class="card d-flex">
    <%= cl_image_tag @cocktail.photo.key, width: 200, height: 200, crop: :fill %>
    <h1><%= @cocktail.name %></h1>
  </div>
  <div class="card">
    <%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail) %>
    <ul>      
      <% @cocktail.doses.each do |dose| %>
        <li><%= dose.description %> <%= @ingredients.find(dose.ingredient_id).name %></li>
      <% end %>      
    </ul> 
    <h4>Method</h4>
    <p>You can work it out on your own.</p>     
  </div>

  <div class="card">
    <div class="d-flex justify-content-between">
      <div class="col-sm-4">
        <%= link_to "Back to cocktails", cocktails_path %>
      </div>

      <div class="col-sm-4">
        <%= link_to "Edit cocktail", edit_cocktail_path(@cocktail) %>
      </div>

      <div class="col-sm-4">
        <%= link_to "Delete cocktail", cocktails_path %>
      </div>
    </div>
  </div>

</div>
